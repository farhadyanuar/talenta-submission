{
  "openapi": "3.0.0",
  "info": {
    "title": "Talenta Submitter API",
    "version": "1.0.0"
  },
  "servers": [{ "url": "/" }],
  "paths": {
    "/bulkSubmit": {
      "post": {
        "tags": ["Talenta Service"],
        "summary": "Bulk submit Talenta timesheet",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "fromDate": { "type": "string" },
                  "toDate": { "type": "string" },
                  "taskId": { "type": "integer" }
                },
                "required": ["fromDate", "toDate"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Bulk submission results"
          }
        }
      }
    }
  }
}
